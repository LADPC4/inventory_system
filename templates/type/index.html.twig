{% extends 'page.html.twig' %}

{% block title %}Type List{% endblock %}

{% block body %}
<section class="section">
    <div class="pagetitle">
        <h1>Manage Type</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                <li class="breadcrumb-item">Pages</li>
                <li class="breadcrumb-item active">Type</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Type List</h5>
                            <a href="{{ path('app_type_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> New Type
                            </a>
                        </div>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 58%;">Type</th>
                                    <th style="width: 12%;">Created At</th>
                                    <th style="width: 12%;">Updated At</th>
                                    <th style="width: 12%;">Modified By</th>
                                    <th style="width: 6%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% if types is not empty %}
                                {% for type in types %}
                                <tr>
                                    <td>{{ type.name }}</td>
                                    <td>{{ type.creationTime }}</td>
                                    <td>{{ type.relativeTime }}</td>
                                    <td>
                                        {% if type.modifiedBy %}
                                            {{ type.modifiedBy.name }}
                                        {% else %}
                                            Unknown
                                        {% endif %}
                                    </td>
                                    <td class="text-left">
                                        {# <a href="{{ path('app_type_show', {'id': type.id}) }}" class="btn btn-secondary btn-sm my-1">
                                            <i class="bi bi-file-earmark-person"></i> Show
                                        </a> #}
                                        <a href="{{ path('app_type_edit', {'id': type.id}) }}" class="btn btn-warning btn-sm my-1">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="5">No records found</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
{% endblock %}

