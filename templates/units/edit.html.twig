{% extends 'page.html.twig' %}

{% block title %}Edit Unit{% endblock %}

{% block body %}
<section class="section">
    <div class="pagetitle">
        <h1>Edit Unit</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                <li class="breadcrumb-item"><a href="/units">Units</a></li>
                <li class="breadcrumb-item active">{{ unit.name }}</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title">Unit Details</h5>

                    <!-- Horizontal Form -->
                    {{ form_start(form) }}
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Unit Name</label>
                            <div class="col-sm-10">
                                {{ form_row(form.name) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 label">
                                <a href="{{ path('app_units_index') }}" class="btn btn-outline-secondary shadow-sm my-1">
                                    Back
                                </a>
                                {{ form_widget(form.save, {
                                    'attr': {'class': 'btn btn-primary my-1'},
                                    'label': 'Update'
                                }) }}
                            </div>
                        </div>
                    {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
{% endblock %}

