{% extends 'base.html.twig' %}

{% block title %}Units{% endblock %}

{% block body %}
    <h1>Units</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ unit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ unit.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ unit.createdAt ? unit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ unit.updatedAt ? unit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_units_index') }}">back to list</a>

    <a href="{{ path('app_units_edit', {'id': unit.id}) }}">edit</a>

    {{ include('units/_delete_form.html.twig') }}
{% endblock %}
