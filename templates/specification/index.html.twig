{% extends 'page.html.twig' %}

{% block title %}Specification List{% endblock %}

{% block body %}
<section class="section">
    <div class="pagetitle">
        <h1>Specification List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                <li class="breadcrumb-item">Pages</li>
                <li class="breadcrumb-item active">Specification</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Specification List</h5>
                            <a href="{{ path('app_specification_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> New Specification
                            </a>
                        </div>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 58%;">Name</th>
                                    <th style="width: 12%;">Created At</th>
                                    <th style="width: 12%;">Updated At</th>
                                    <th style="width: 12%;">Modified By</th>
                                    <th style="width: 6%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% if specifications is not empty %}
                                {% for specification in specifications %}
                                <tr>
                                    <td>{{ specification.name }}</td>
                                    {# <td>{{ unit.updatedAt|date('Y-m-d H:i') }}</td> #}
                                    <td>{{ specification.creationTime }}</td>
                                    <td>{{ specification.relativeTime }}</td>
                                    <td>
                                        {% if specification.modifiedBy %}
                                            {{ specification.modifiedBy.name }}
                                        {% else %}
                                            Unknown
                                        {% endif %}
                                    </td>
                                    <td class="text-left">
                                        {# <a href="{{ path('app_units_show', {'id': unit.id}) }}" class="btn btn-secondary btn-sm my-1">
                                            <i class="bi bi-file-earmark-person"></i> Show
                                        </a> #}
                                        <a href="{{ path('app_specification_edit', {'id': specification.id}) }}" class="btn btn-warning btn-sm my-1">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="5">No records found</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
{% endblock %}

