{% extends 'base.html.twig' %}

{% block title %}Specification{% endblock %}

{% block body %}
    <h1>Specification</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specification.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ specification.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ specification.createdAt ? specification.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ specification.updatedAt ? specification.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_specification_index') }}">back to list</a>

    <a href="{{ path('app_specification_edit', {'id': specification.id}) }}">edit</a>

    {{ include('specification/_delete_form.html.twig') }}
{% endblock %}
