{% extends 'page.html.twig' %}

{% block title %}New Specification{% endblock %}

{% block body %}
<section class="section">
    <div class="pagetitle">
        <h1>New Specification</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                <li class="breadcrumb-item">Pages</li>
                <li class="breadcrumb-item active">New Specification</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title">Specification Details</h5>

                    <!-- Horizontal Form -->
                    {{ form_start(form) }}
                    {% if form_errors(form) %}
                        <div class="alert alert-danger">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Specification</label>
                            <div class="col-sm-10">
                                {{ form_row(form.name) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 label">
                                <a href="{{ path('app_specification_index') }}" class="btn btn-outline-secondary shadow-sm my-1">
                                    Back
                                </a>
                                {{ form_widget(form.save, {
                                    'attr': {'class': 'btn btn-primary my-1'},
                                    'label': 'Save'
                                }) }}
                            </div>
                        </div>
                    {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
{% endblock %}
